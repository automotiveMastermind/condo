        private const string AttributeExpression = @"(\[assembly[\s:]+{0}\([\@\""]+)(.*)(\""\)\])";
        private const string MetadataExpression = @"(\[assembly[\s:]+AssemblyMetadata\([@\""]+{0}\""[\,\s]+[@\""]+)(.*)(\""\)\])";

